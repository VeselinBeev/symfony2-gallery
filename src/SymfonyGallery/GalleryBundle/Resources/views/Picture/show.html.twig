{% extends '::base.html.twig' %}

{% block picture %}
    <h1>Picture</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ entity.userId }}</td>
            </tr>
            <tr>
                <th>Folderid</th>
                <td>{{ entity.folderId }}</td>
            </tr>
            <tr>
                <th>Picname</th>
                <td>{{ entity.picName }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ entity.comment }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('picture') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('picture_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
